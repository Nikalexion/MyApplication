<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mode_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nikalexion.milasiskas.ModePicker"
    android:background="@drawable/bc"
    android:layout_centerInParent="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minHeight="90dp"
        android:minWidth="200dp"
        android:src="@drawable/logo2"
        android:id="@+id/imageView"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="απλο παιχνιδι"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simpleMode"
        android:textSize="30sp"
        android:layout_marginTop="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_bg" />

    <Button
        android:text="Με ποντους"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreMode"
        android:textSize="30sp"
        android:layout_below="@+id/simpleMode"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg" />

</RelativeLayout>
