<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/bg"
        android:elevation="1dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.nikalexion.milasiskas.MainActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:minWidth="200dp"
            android:minHeight="90dp"
            android:src="@drawable/logo2" />

        <Button
            android:id="@+id/starter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:background="@drawable/button"
            android:text="Εναρξη"
            android:textSize="20sp" />

        <Button
            android:id="@+id/epiloges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/starter"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Κατηγοριες"
            android:textSize="20sp" />

        <Button
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/epiloges"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Νεες κατηγοριες"
            android:textSize="18sp" />

        <Button
            android:id="@+id/guidelines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Κανονες"
            android:textSize="20sp" />

        <Button
            android:id="@+id/promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guidelines"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Λοιπες επιλογες"
            android:textSize="18sp" />


    </RelativeLayout>
</ScrollView>