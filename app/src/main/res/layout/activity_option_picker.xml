<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_option_picker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nikalexion.milasiskas.OptionPicker"
    android:background="@drawable/bg">

    <ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="120dp"
    android:minWidth="200dp"
    android:minHeight="90dp"
    android:src="@drawable/logara"
        android:layout_marginStart="10dp" />


    <Spinner
        android:id="@+id/modeSwitchSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal = "true" />

    <SeekBar
        android:id="@+id/scoreBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modeSwitchSpinner"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreBar"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/teamsBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreText"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/teamsText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamsBar"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/timeBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamsText"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeBar"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/pasaBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeText"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/pasaText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pasaBar"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="play score mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launchScoreModeButton"
        android:textSize="18sp"
        android:layout_below="@+id/pasaText"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal = "true"
        android:background="@drawable/button" />


</RelativeLayout>
</ScrollView>