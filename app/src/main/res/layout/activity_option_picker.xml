<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_option_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nikalexion.milasiskas.OptionPicker"
    android:background="@drawable/bg"
    android:layout_centerInParent="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:minHeight="90dp"
        android:minWidth="200dp"
        android:src="@drawable/logo2"
        android:id="@+id/imageView"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Score mode option X"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testbutton1"
        android:textSize="30sp"
        android:layout_marginTop="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_bg" />

    <SeekBar
        android:id="@+id/timeBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testbutton1"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeBar"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/pasaBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeText"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/pasaText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pasaBar"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="play score mode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/launchScoreModeButton"
        android:textSize="30sp"
        android:layout_below="@+id/pasaText"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg" />


</RelativeLayout>
